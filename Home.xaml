            <Button Content="Bateaux&#xA;" Height="31" FontSize="16" Click="Button_Click"/>
            <Button x:Name="PassengerSection" Content="Enregistrement&#xA;" Height="31" FontSize="16" Click="PassengerSection_Click"/>
